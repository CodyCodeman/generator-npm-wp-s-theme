{
  "name": "<%= package_name %>",
  "version": "0.0.9",
  "description": "<%= package_description %>",
  "author": "<%= package_author %>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mnyorba/generator-npm-wp-s-theme"
  },
  "bugs": "https://github.com/mnyorba/generator-npm-wp-s-theme/issues",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "wiredep": "wiredep -s sass/style.scss --dependencies",
    
    "scss:style": "node-sass --output-style expanded sass/style.scss > style.css",
    "scss:woocommerce": "node-sass --output-style expanded sass/woocommerce.scss > woocommerce.css",
    "scss": "run-p  --continue-on-error --print-label --silent --aggregate-output scss:*",
    
    "serve": "browser-sync start --proxy \"<%= proxy_address %>/<%= proxy_domain %>\" --files \"*.css, js/*.js, **/*.php, !node_modules/**/*.html, !bower_components*.*\"",
    "autoprefixer": "postcss --use autoprefixer --autoprefixer.browsers \"> 1%, last 12 versions, Firefox ESR\" --replace *.css",
    
    "uglify": "mkdirp dist/js -p && uglifyjs js/*.js -m -o dist/js/app.js && uglifyjs js/*.js -m -c -o dist/js/app.min.js",
    
    "lint-scss:style": "stylelint sass/theme.scss --syntax scss",
    "lint-scss:woocommerce": "stylelint sass/woocommerce.scss --syntax scss",
    "lint-scss": "run-p --continue-on-error --print-label --silent --aggregate-output lint-scss:*",
    
    "lint": "eslint js/*.js",
    
    "build:css": "run-p lint-scss scss",
    "build:js": "run-s lint uglify",
    
    "watch-lint:css": "onchange \"sass\" -- run-s build:css autoprefixer",
    "watch-lint:js": "onchange \"js\" -- run-s build:js",
    "watch-lint": "run-p serve watch-lint:*",
    
    "watch:css": "onchange \"sass\" -- run-s scss autoprefixer",
    "watch:js": "onchange \"js\" -- run-s uglify",
    "watch": "run-p serve watch:*",
    
    "imagemin": "imagemin images/**/*.{jpg,png} -o dist/<%= package_name %>/images",
    
    "build:images": "run-s imagemin",
    "watch:images": "onchange \"images\" -- run-s build:images",
    "build": "run-s clean copy",    
    
    "clean": "rimraf dist/**/*",
    "copy": "gulp build-copy",
    "postinstall": "run-s build:*"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.12.8",
    "eslint": "^2.10.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.7.0",
    "npm-run-all": "^4.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.6.2",
    "gulp": "^3.9.1",
    "stylelint": "^7.8.0",
    "uglify-js": "^2.6.2",
    "wp-pot": "^1.3.5",
    "wiredep-cli": "^0.1.0"    
  }
}
